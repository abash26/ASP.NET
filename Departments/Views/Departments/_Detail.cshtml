@model Department

<form method="post" action="/departments/@ViewBag.Action" class="mb-3">
    @if (Model != null && ViewBag.Action == "edit")
    {
        <input type='hidden' name='Id' value='@Model.Id' />
    }
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required>
    </div>
    <div class="d-flex gap-2">
        <a href="/departments" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
