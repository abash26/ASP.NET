@model Department

@{
    ViewBag.Title = "Department Details";
}

<h1 class="mb-4">Department Details</h1>
<form method="post" action="/departments/edit" class="mb-3">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" required>
    </div>
    <div class="d-flex gap-2">
        <a href="/departments" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

<form method="post" action="/departments/delete/@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>